// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  adresse   String
  Commande  Order[]
}

model Admin {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String
  password String
  logo     String?
  Commande Order[]
  Category Category[]
  Menu     Menu[]
}

model Order {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       String
  isFinished  Boolean
  admin_id    Int
  user_id     Int
  Admin       Admin   @relation(fields: [admin_id], references: [id])
  User        User    @relation(fields: [user_id], references: [id])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       String
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  image       Image?    @relation(fields: [imageId], references: [id])
  imageId     Int?
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  admin_id    Int?
  price       String
  menu_id     Int?
  Admin       Admin?    @relation(fields: [admin_id], references: [id])
  menu        Menu?     @relation(fields: [menu_id], references: [id])
  products    Product[]
  imageId     Int?
  image       Image?    @relation(fields: [imageId], references: [id])
}

model Menu {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  admin_id    Int?
  price       String
  Admin       Admin?     @relation(fields: [admin_id], references: [id])
  categories  Category[]
  imageId     Int?
  image       Image?     @relation(fields: [imageId], references: [id])
}

model Image {
  id       Int        @id @default(autoincrement())
  url      String
  product  Product[]
  category Category[]
  menu     Menu[]
}
